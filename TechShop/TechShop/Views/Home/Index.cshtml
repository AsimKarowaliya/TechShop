@{
    ViewData["Title"] = "Home Page";
}

@model ICollection<TechShop.Models.Products>

@foreach (var item in Model)
{

    <div class="card" style="width: 18rem;">

        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>

        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">CPU: @item.Cpu</li>
            <li class="list-group-item">GPU: @item.Gpu</li>
            <li class="list-group-item">RAM: @item.Ram</li>
            <li class="list-group-item">STORAGE: @item.Storage</li>
            <li class="list-group-item">PRICE: $@item.Price</li>
        </ul>
        <div class="card-body">
            <a href="#" class="card-link">Add to Cart</a>
        </div>
    </div>






}
